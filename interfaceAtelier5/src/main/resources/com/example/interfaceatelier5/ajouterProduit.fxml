<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.interfaceatelier5.HelloController"
      spacing="10"
      alignment="center">

    <Label text="Ajouter un produit" />
    <Label text="Entrez le type de produit (1)Électronique, 2)Alimentaire, 3)Vestimentaire) :" />
    <TextField fx:id="productTypeField" promptText="Type de produit" />
    <Label text="Entrez l'ID du produit :" />
    <TextField fx:id="productIdField" promptText="ID du produit" />
    <Label text="Entrez le nom du produit :" />
    <TextField fx:id="productNameField" promptText="Nom du produit" />
    <Label text="Entrez la quantité :" />
    <TextField fx:id="productQuantityField" promptText="Quantité" />
    <Button text="Ajouter" onAction="#handleAddProduct" />
    <Button text="Retour" onAction="#handleBackToMenu" />
</VBox>
